{
  "polite_masu": {
    "label": "Polite (Masu-Form)",
    "description": "Standard polite present/future affirmative.",
    "rules": {
      "godan": { "type": "godan_change", "map": "u_to_i", "add": "ます" },
      "ichidan": { "type": "suffix", "remove": "る", "add": "ます" },
      "irr_suru": { "type": "replace", "surface": "します", "reading": "します" },
      "irr_kuru": { "type": "replace", "surface": "来ます", "reading": "きます" }
    }
  },
  "polite_mashita": {
    "label": "Polite Past (Mashita-Form)",
    "description": "Standard polite past affirmative.",
    "rules": {
      "godan": { "type": "godan_change", "map": "u_to_i", "add": "ました" },
      "ichidan": { "type": "suffix", "remove": "る", "add": "ました" },
      "irr_suru": { "type": "replace", "surface": "しました", "reading": "しました" },
      "irr_kuru": { "type": "replace", "surface": "来ました", "reading": "きました" }
    }
  },
  "polite_negative": {
    "label": "Polite Negative (Masen / Desu)",
    "description": "Standard polite negative.",
    "rules": {
      "godan": { "type": "godan_change", "map": "u_to_i", "add": "ません" },
      "ichidan": { "type": "suffix", "remove": "る", "add": "ません" },
      "irr_suru": { "type": "replace", "surface": "しません", "reading": "しません" },
      "irr_kuru": { "type": "replace", "surface": "来ません", "reading": "きません" },
      "i_adj": { "type": "suffix", "remove": "い", "add": "くないです" },
      "na_adj": { "type": "suffix", "add": "じゃありません" }
    }
  },
  "polite_past_negative": {
    "label": "Polite Past Negative",
    "description": "Standard polite past negative.",
    "rules": {
      "godan": { "type": "godan_change", "map": "u_to_i", "add": "ませんでした" },
      "ichidan": { "type": "suffix", "remove": "る", "add": "ませんでした" },
      "irr_suru": { "type": "replace", "surface": "しませんでした", "reading": "しませんでした" },
      "irr_kuru": { "type": "replace", "surface": "来ませんでした", "reading": "きませんでした" },
      "i_adj": { "type": "suffix", "remove": "い", "add": "くなかったです" },
      "na_adj": { "type": "suffix", "add": "じゃありませんでした" }
    }
  },
  "polite_adj": {
    "label": "Polite Adjective (Desu)",
    "description": "Polite affirmative for adjectives.",
    "rules": {
      "i_adj": { "type": "suffix", "add": "です" },
      "na_adj": { "type": "suffix", "add": "です" }
    }
  },
  "polite_past_adj": {
    "label": "Polite Past Adjective",
    "description": "Polite past affirmative for adjectives.",
    "rules": {
      "i_adj": { "type": "suffix", "remove": "い", "add": "かったです" },
      "na_adj": { "type": "suffix", "add": "でした" }
    }
  },
  "plain_past": {
    "label": "Past (Ta/Datta)",
    "description": "Plain past affirmative.",
    "rules": {
      "godan": { "type": "godan_euphonic", "map": "ta_form" },
      "ichidan": { "type": "suffix", "remove": "る", "add": "た" },
      "irr_suru": { "type": "replace", "surface": "した", "reading": "した" },
      "irr_kuru": { "type": "replace", "surface": "来た", "reading": "きた" },
      "i_adj": { "type": "suffix", "remove": "い", "add": "かった" },
      "na_adj": { "type": "suffix", "add": "だった" }
    }
  },
  "plain_negative": {
    "label": "Negative (Nai)",
    "description": "Plain present negative.",
    "rules": {
      "godan": { "type": "godan_change", "map": "u_to_a", "add": "ない" },
      "ichidan": { "type": "suffix", "remove": "る", "add": "ない" },
      "irr_suru": { "type": "replace", "surface": "しない", "reading": "しない" },
      "irr_kuru": { "type": "replace", "surface": "こない", "reading": "こない" },
      "i_adj": { "type": "suffix", "remove": "い", "add": "くない" },
      "na_adj": { "type": "suffix", "add": "じゃない" }
    }
  },
  "plain_past_negative": {
    "label": "Past Negative (Nakatta)",
    "description": "Plain past negative.",
    "rules": {
      "godan": { "type": "godan_change", "map": "u_to_a", "add": "なかった" },
      "ichidan": { "type": "suffix", "remove": "る", "add": "なかった" },
      "irr_suru": { "type": "replace", "surface": "しなかった", "reading": "しなかった" },
      "irr_kuru": { "type": "replace", "surface": "こなかった", "reading": "こなかった" },
      "i_adj": { "type": "suffix", "remove": "い", "add": "くなかった" },
      "na_adj": { "type": "suffix", "add": "じゃなかった" }
    }
  },
  "te_form": {
    "label": "Te-Form",
    "description": "Connective form used for 'and', requests, etc.",
    "rules": {
      "godan": { "type": "godan_euphonic", "map": "te_form" },
      "ichidan": { "type": "suffix", "remove": "る", "add": "て" },
      "irr_suru": { "type": "replace", "surface": "して", "reading": "して" },
      "irr_kuru": { "type": "replace", "surface": "来て", "reading": "きて" },
      "i_adj": { "type": "suffix", "remove": "い", "add": "くて" },
      "na_adj": { "type": "suffix", "add": "で" }
    }
  },
  "potential": {
    "label": "Potential Form",
    "description": "Expresses ability (can do).",
    "rules": {
      "godan": { "type": "godan_change", "map": "u_to_e", "add": "る" },
      "ichidan": { "type": "suffix", "remove": "る", "add": "られる" },
      "irr_suru": { "type": "replace", "surface": "できる", "reading": "できる" },
      "irr_kuru": { "type": "replace", "surface": "来られる", "reading": "こられる" }
    }
  },
  "adverbial": {
    "label": "Adverbial Form (Ku/Ni)",
    "description": "Changes the adjective into an adverb.",
    "rules": {
      "i_adj": { "type": "suffix", "remove": "い", "add": "く" },
      "na_adj": { "type": "suffix", "add": "に" }
    }
  }
}
